# Financial Knowledge Base RAG System - Environment Configuration
# Copy this file to .env and update with your actual values

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
EMBEDDING_MODEL=text-embedding-ada-002
FALLBACK_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Database Configuration
DB_VECTOR_DB_TYPE=faiss
DB_SQLITE_DB_PATH=knowledge_base/data/financial_kb.db
DB_FAISS_INDEX_PATH=knowledge_base/data/faiss_index
DB_CHROMADB_PATH=knowledge_base/data/chromadb

# Pinecone Configuration (if using Pinecone)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_environment
PINECONE_INDEX_NAME=your_index_name

# SEC API Configuration
SEC_USER_AGENT=Financial Knowledge Base RAG System
SEC_EMAIL=knowledge_base@company.com

# Data Processing Configuration
PROC_CHUNK_SIZE=1000
PROC_CHUNK_OVERLAP=200
PROC_MAX_CHUNK_SIZE=2000
PROC_MAX_FILE_SIZE_MB=50

# Data Paths
DATA_RAW_PATH=knowledge_base/data/raw
DATA_PROCESSED_PATH=knowledge_base/data/processed
DATA_OUTPUT_PATH=knowledge_base/data/outputs

# RAG Configuration
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7
RAG_MAX_CONTEXT_LENGTH=4000
RAG_ENABLE_CROSS_CLIENT_SEARCH=true
RAG_CROSS_CLIENT_SIMILARITY_THRESHOLD=0.8

# Report Generation
REPORT_DEFAULT_OUTPUT_FORMAT=markdown
REPORT_OUTPUT_DIRECTORY=knowledge_base/data/outputs/reports
REPORT_MAX_SECTIONS_PER_REPORT=10
REPORT_INCLUDE_CHARTS=true
REPORT_INCLUDE_SOURCES=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=knowledge_base/logs/app.log
LOG_ENABLE_CONSOLE_LOGGING=true

# System Configuration
ENVIRONMENT=development
DEBUG=false
MAX_REQUESTS_PER_MINUTE=60
REQUEST_TIMEOUT=30